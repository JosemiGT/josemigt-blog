---
import FormattedDate from "./FormattedDate.astro";
const { url, title, pubDate, description } = Astro.props;
---

<a href={url}>
    <article>
        <h2>{title}</h2>    
        <FormattedDate date={pubDate} />
        <p>{description}</p>
    </article>
</a>

<style>
    a{
        color: inherit;
        text-decoration: none;
    }
    article {
      display: flex;
      flex-direction: column;
      margin-top: 1rem;
      border: 1cm;
      border-style: solid;
      border-width: 1px;
      border-radius: 1rem;
      border-color: inherit;
      width: 100%;
      text-align: center;
    }

  </style>