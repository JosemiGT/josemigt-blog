---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time class="time" datetime={date?.toISOString()}>
	{
		date?.toLocaleDateString('es-es', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>

<style>
	.time{
		display: flex;
		justify-content: center;
		align-items: center;
		font-size: x-large;
	}
</style>