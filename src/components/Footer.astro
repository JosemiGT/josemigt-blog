---
import GitHubIcon from "../icons/GitHubIcon.astro";
import LinkedinIcon from "../icons/LinkedinIcon.astro";
import XsocialMediaIcon from "../icons/XsocialMediaIcon.astro";
const today = new Date();
const userName = "JosemiGT";
---

<style>
  footer {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    justify-content: center;
    align-items: center;
  }
</style>

<footer>
  &copy; {today.getFullYear()} {" " + userName}.
  <GitHubIcon username={userName} />
  <XsocialMediaIcon username={userName} />
  <LinkedinIcon username={userName} />
</footer>